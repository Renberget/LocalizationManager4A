<Window x:Class="LocalizationManagerTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalizationManagerTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid VerticalAlignment="Top" Margin="0,0,0,-1">
        <Menu VerticalAlignment="Top" Height="22">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="Button_New"/>
                <MenuItem Header="Open" Click="Button_Open"/>
                <MenuItem Header="Export">
                    <MenuItem Header="CSV" Click="Button_Export"/>
                    <MenuItem Header="JSON" Click="Button_Export"/>
                    <MenuItem Header="XML" Click="Button_Export"/>
                    <MenuItem Header="C# Singleton" Click="Button_Export"/>
                    <MenuItem Header="C++ Singleton" Click="Button_Export"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
            </MenuItem>
        </Menu>
        <DataGrid Name="dataGrid" Margin="0,22,0,0" AutoGenerateColumns="True"/>
    </Grid>
</Window>
